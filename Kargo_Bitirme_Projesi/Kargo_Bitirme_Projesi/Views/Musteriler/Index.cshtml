@model IEnumerable<Kargo_Bitirme_Projesi.Entities.Musteriler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MusteriAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusteriSoyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusteriTelefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusteriAdres)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MusteriAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MusteriSoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MusteriTelefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MusteriAdres)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
