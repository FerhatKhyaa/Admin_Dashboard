@model Admin_Panel_Olusturma.Entities.GaleriKategorileri

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <h1>Düzenle</h1>

            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Kategoriyi Düzenle</h3>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="card-body">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="KategoriAdi" class="control-label"></label>
                                    <input asp-for="KategoriAdi" class="form-control" />
                                    <span asp-validation-for="KategoriAdi" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Durum" class="control-label"></label>
                                    <select asp-for="Durum" class="form-control">
                                        <option value="1">Yayında</option>
                                        <option value="0">Pasif</option>
                                    </select>
                                    <span asp-validation-for="Durum" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="KategoriId" class="control-label"></label>
                                    <select asp-for="KategoriId" class="form-control" asp-items="ViewBag.KategoriId">
                                        <option value=""></option>
                                    </select>
                                    <span asp-validation-for="KategoriId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>

                            </form>
                            <div>
                                <a class="btn btn btn-info" asp-action="Index">Listey Geri Dön</a>
                            </div>
                        </div>


                    </div>
                </div>
            </div>



        </div>
    </section>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
