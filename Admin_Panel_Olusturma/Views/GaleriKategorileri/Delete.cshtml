@model Admin_Panel_Olusturma.Entities.GaleriKategorileri

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">
            <h1>Sil</h1>

            <h3>Silmek İstediğinize Emin Misiniz?</h3>
            <div>
                <h4>Kategori Sil</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.KategoriAdi)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.KategoriAdi)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Durum)
                    </dt>
                    <dd class="col-sm-10">
                        @(Model.Durum==1?"Yayında":"Pasif")
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.GaleriKategori)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.GaleriKategori.KategoriAdi)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </section>
</div>

