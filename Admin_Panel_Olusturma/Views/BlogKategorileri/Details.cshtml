@model Admin_Panel_Olusturma.Entities.BlogKategorileri

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">
            <div class="mt-3">
                <h4>Kategori Düzenle</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.KategoriAdi)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.KategoriAdi)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Durum)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Durum)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BlogKategori)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BlogKategori.KategoriAdi)
