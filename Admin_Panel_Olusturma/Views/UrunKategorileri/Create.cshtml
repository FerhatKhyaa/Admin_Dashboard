@model Admin_Panel_Olusturma.Entities.UrunKategorileri

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <h1>Ürün Kategori Ekle</h1>


            <div class="row">
                <div class="col-md-12">

                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Kategori Ekle</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->


                        <div class="card-body">
                            <form asp-action="Create" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="KategoriAdi" class="control-label"></label>
                                    <input asp-for="KategoriAdi" class="form-control" />
                                    <span asp-validation-for="KategoriAdi" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Durum" class="control-label"></label>
                                    <select asp-for="Durum" class="form-control">
                                        <option value="1">Yayında</option>
                                        <option value="0">Pasif</option>
                                    </select>
                                    <span asp-validation-for="Durum" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UploadImage" class="control-label"></label>
                                   <input asp-for="UploadImage" class="form-control" accept="Image/*" />
                                    <span asp-validation-for="UploadImage" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="KategoriId" class="control-label"></label>
                                    <select asp-for="KategoriId" class="form-control" asp-items="ViewBag.KategoriId">
                                        <option value="">Üst Kategori Yok!</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Ekle" class="btn btn-primary float-right col-sm-4" />
                                </div>
                                <div>
                                    <a class="btn btn btn-info" asp-action="Index">Listeye Geri Dön</a>
                                </div>
                            </form>



                        </div>
                    </div>
                </div>
            </div>


        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
